html, body
  background #fff
  font-family "Roboto", "Helvetica Neue", "Helvetica", "Arial"
  font-size 14px
  margin 0
  padding 0

a
  color #cc0001
  transition 0.5s color
  &:hover
    color #000

.content
  padding 20px

  h1
    font-size 50px
    font-weight 100
    margin 0
    margin-bottom 10px

  h2
    font-weight 300

ul
  margin 0
  padding 0
  li
    list-style none
    margin 0
    padding 0
    padding-bottom 5px

.credit
  position fixed
  bottom 0
  left 0
  width 100%;
  // padding 20px
  background rgba(255,255,255,0.7)
  color #333
  font-size 12px
  text-align: center;
  span
    display inline-block
    padding 10px

.hero
  background-size cover
  width 100%
  position: fixed;
  top 0px
  bottom 0px
  color #fff
   -webkit-filter blur(25px)
  -moz-filter blur(25px)
  -o-filter blur(25px)
  -ms-filter blur(25px)
  filter blur(25px)

  h1
    color: #fff
    text-shadow 2px 2px 0px rgba(0,0,0, 0.75)

.gallery
  position fixed
  bottom 100px
  left 0
  width 100%
  text-align center

  li
    display inline-block
    background rgba(255, 255, 255, 0.25)
    padding 10px
    margin 10px
  img
    width 100px


.entries
  li
    clear both
    background-size cover
    background-color rgba(0,0,0,0.8)
    margin 0
    margin-bottom 20px
    padding 10px 20px
    vertical-align top
    transition opacity 0.5s

    &:hover
      opacity 0.9
      cursor pointer

  .thumb
    width 120px
    display inline-block
    margin-right 10px

  h4
    display inline-block

  a, a:visited
    color #FFF
    text-shadow 1px 1px 1px rgba(0,0,0, 0.7)
