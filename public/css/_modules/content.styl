body
  display: flex;
  min-height: 100vh;
  flex-direction: row;

.content
  display: flex;
  flex: 1;

// BUTTONS
.mdl-button--raised.mdl-button--colored
  background-color: $blue;
  &:hover
    background-color: $blue-highlight;

// UTILITY
.pad-right
  padding-right: 20px;

.pad-left
  padding-left: 20px;

// STATUS
.error-container
  background: $bad;
