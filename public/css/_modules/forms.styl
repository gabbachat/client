.input-group
  display: block;
  margin: 10px 0;

  label
    display: block;
    margin-bottom: 5px;

  input
    padding: 7px 3px;
    border: 0;
    border-bottom: solid 1px $border-color;
    color: $grey;
    font-size: 13px;
    transition: 0.5s border;

    &:focus
      border-color: $color-primary;
      color: $black;

      &::-webkit-input-placeholder
        color: lighten($color-primary, 20);
        font-weight: 300;

    &::-webkit-input-placeholder
      color: $grey-light;
      font-weight: 300;


// BUTTONS
button
  background-color: $color-primary;
  border: none;
  color: $color-primary-text;
  font-size: 13px;
  padding: 10px 20px;
  transition: 0.5s background;

  &:hover
    background-color: $color-primary-highlight;
    cursor: pointer;
